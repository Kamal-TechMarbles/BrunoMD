<div class="productpage-banner science-banner">
    <div class="science-banner-overlay" style="width: 100%; min-height: 600px; background: #2f194a; opacity: .25; position: absolute;"></div>
    <div class="page-width-custom">
        <div class="grid">
            <div class="grid__item small--one-whole medium-up--one-whole " style="background-image: url({{ section.settings.banner | img_url: 'master' }})">
              <div class="science-banner-text" style="z-index: 1; position: absolute; width: 520px"><h4>{{ section.settings.banner_heading | remove: '<p>' | remove: '</p>' }}</h4>
                <p>{{ section.settings.banner_text | remove: '<p>' | remove: '</p>' }}</p>
              </div>
              </div>
          <div class="grid__item small--one-whole medium-up--one-third hide"><img src="{{ section.settings.product_banner | img_url: 'master' }}"></div>
        </div>
    </div>
</div>

