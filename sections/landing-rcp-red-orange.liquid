<section class="red-orange common-section">
  	<div class="page-width">
      	<div class="imgbox desktop-hide"><img class="lazyload" data-src="{{ section.settings.img | img_url: 'master' | split:'?' | first }}" alt="Orange"></div>
      	<div class="content">
      		<h2>{{ section.settings.head }}</h2>
      		{{ section.settings.txt }}
      	</div>
      	<div class="imgbox mobile-hide"><img class="lazyload" data-src="{{ section.settings.img | img_url: 'master' | split:'?' | first }}" alt="Orange"></div>
    </div>
</section>

{% schema %}
	{
    	"name": "Red Orange Section",
    	"settings": [
			{
				"type": "header",
				"content": "Red Orange Section"
			},
			{
				"type": "text",
				"id": "head",
				"label": "Section Heading"
			},
			{
				"type": "richtext",
				"id": "txt",
				"label": "Description"
			},
			{
				"type": "image_picker",
				"id": "img",
				"label": "Upload Image"
			}
		]
  	}
{% endschema %}