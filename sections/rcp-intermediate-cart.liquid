<style type="text/css">
    .gift-select {
        justify-content: space-between;
        align-items: center;
        margin: 15px auto;
      	display: flex;
    }
    /*.free-gift-title:before {
        border: 2px solid #518fd3;
        display: inline-block;
        border-radius: 50%;
        position: absolute;
        text-align: center;
        line-height: 42px;
        font-size: 40px;
        color: #518fd3;
        margin: auto;
        content: '+';
        height: 40px;
        width: 40px;
        left: -50px;
        bottom: 0;
