        var windowsize = jQuery(window).width();
        if( windowsize > 749 ) {
            var $margin = 0;
            var $itemLI = jQuery('#DesktopSlider li').size();
            var $itemMR = $itemLI - 5;
                $itemMR = -($itemMR * 110);
            jQuery(document).on('click', '.thumbnails-wrapper .btn.thumbnails-slider__next', function(e) {
                e.stopPropagation();
                var $iam = jQuery(this);
                var target = jQuery('#DesktopSlider li:eq(0)');
                   $margin = jQuery('#DesktopSlider li:eq(0)').css('marginTop');
                   $margin = parseInt($margin);
                   //console.log($margin);
                if( $itemLI > 5 ) {
                    if( $itemMR <= $margin ) {
                        $iam.attr('disabled', true);
                        $(target).animate({
                            marginTop: $margin - 110
                        }, 250, function() {
                            jQuery('.thumbnails-wrapper .btn').removeAttr('disabled');
                        });
                        return false;
                    }
                }
            });
            jQuery(document).on('click', '.thumbnails-wrapper .btn.thumbnails-slider__prev', function(e) {
                e.stopPropagation();
                var $iam = jQuery(this);
                var target = jQuery('#DesktopSlider li:eq(0)');
                   $margin = jQuery('#DesktopSlider li:eq(0)').css('marginTop');
