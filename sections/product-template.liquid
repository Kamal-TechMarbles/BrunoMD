    <div class="landing-product-benefits {{ product.handle | tolower }}">
        <div class="page-width">
            <div class="grid stick-packs">
                {% for field in product.metafields.product_benefits %}
                {% assign words = field | last | split: '####' %}
                {% assign items1 = words[2] | split: '##' %}
                {% assign items2 = words[3] | split: '##' %}
                <div class="section-heading text-center medium--hide">
                    <h3>{{ words[1] }}</h3>
                </div>
                <div class="grid__item medium-up--one-quarter medium-up--30 text-center">
                    <img  src="{{ words[0] | asset_img_url: '720x' | split:'?' | first }}">
                </div>
                <div class="grid__item medium-up--one-half">
                    <div class="section-heading text-left small--hide">
                        <h3>{{ words[1] }}</h3>
                    </div>
                    <div class="page-width" style="padding:0">
                        <div class="grid product-div">
                            <div class="product-benefits grid__item medium-up--one-whole">
                                <div class="benefits-points">
                                    <div class="product-icon">
                                        <h4>{{ items1[0] }}</h4>
                                        <p>{{ items2[0] }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="product-benefits grid__item medium-up--one-whole">
                                <div class="benefits-points">
                                    <div class="product-icon">
                                        <h4>{{ items1[1] }}</h4>
                                        <p>{{ items2[1] }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="product-benefits grid__item medium-up--one-whole">
                                <div class="benefits-points">
                                    <div class="product-icon">
                                        <h4>{{ items1[2] }}</h4>
                                        <p>{{ items2[2] }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="product-benefits grid__item medium-up--one-whole">
                                <div class="benefits-points">
                                    <div class="product-icon">
                                        <h4>{{ items1[3] }}</h4>
                                        <p>{{ items2[3] }}</p>
                                    </div>
