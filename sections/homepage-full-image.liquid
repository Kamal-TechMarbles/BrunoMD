<div class="full-image-section">
  	<img class="lazyload" data-src="{{ section.settings.img | img_url: 'master' | split:'?' | first }}" alt="Our Passion" width="1366" height="569">
  	{% if section.settings.imgTxt %}<div class="page-width"><h2>{{ section.settings.imgTxt }}</h2></div>{% endif %}
</div>

{% schema %}
    {
        "name": "Full Image Section",
        "settings": [
			{
                "type": "image_picker",
                "id": "img",
                "label": "Upload Image"
            },
			{
                "type": "textarea",
                "id": "imgTxt",
                "label": "Section Heading"
            }
        ],
        "presets": [
            {
                "category": "Homepage",
                "name": "Full Image Section"
            }
        ]
    }
{% endschema %}