    <style type="text/css">
        .section__header p.create_an_account { width: 40%; float: left; padding: 0 10px }
        .section__header p.layout-flex__item { width: 52%; float: right; padding: 0 0 !important }
        .section__header h2#main-header { float: left; width: 100%; margin-bottom: 8px }
        .sidebar:after { background: #54337a !important }
        .js .sidebar .btn--disabled { background: #e65300 !important }
        @font-face { font-family: 'fontello'; src: url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.eot?81342758'); src: url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.eot?81342758#iefix') format('embedded-opentype'), url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.woff2?81342758') format('woff2'), url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.woff?81342758') format('woff'), url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.ttf?81342758') format('truetype'), url('https://www.ndnapps.com/ndnapps/sociallogin/public/font/fontello.svg?81342758#fontello') format('svg'); font-weight: normal; font-style: normal }
        .layout-ndn-socials [class^="icon-"]:before, .layout-ndn-socials [class*=" icon-"]:before { font-family: "fontello"; font-style: normal; font-weight: normal; speak: none; display: inline-block; text-decoration: inherit; width: 1em; line-height: inherit; text-align: center; font-variant: normal; text-transform: none; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale }
        .layout-ndn-socials .icon-facebook:before { content: '\f09a' }
        .layout-ndn-socials .icon-google:before { content: '\f1a0' }
      	.layout-ndn-socials .icon-amazon::before { content: '\f270' }
        body form#customer_login #ndn-sticky-social + span { display: none !important; opacity: 0 }
        body form#customer_login #ndn-sticky-social + span a { pointer-events: none }
        body form#create_customer #ndn-sticky-social + span { display: none; opacity: 0; pointer-events: none }
        .ndnapps-sociallogin { display: inline-block; width: 100% }
        .ndnapps-sociallogin #ndn-sticky-social { display: inline-block; width: 100%; margin: 20px auto 0 }
        .ndnapps-sociallogin #ndn-social-login .ndn-icon { width: 30%; float: left; margin: 0 1.5%; min-width: auto !important }
        @media screen and ( min-width: 750px ) and ( max-width: 1024px ) {
            .ndnapps-sociallogin #ndn-social-login .ndn-icon { width: 95%; margin: 10px 2.5% 0 }
        }
        @media screen and ( max-width: 1024px ) {
            .section__header p.create_an_account, .section__header p.layout-flex__item { font-size: 16px !important }
        }
        @media screen and ( max-width: 750px ) {
            .section__header p.create_an_account, .section__header p.layout-flex__item { font-size: 12px !important }
            .ndnapps-sociallogin { padding: 10px 0 0 }
            .template-customers-register .ndnapps-sociallogin { padding: 45px 0 0 }
            .opt-Register, .template-customers-register .opt-Register { margin: 30px 0 }
          	.ndnapps-sociallogin #ndn-sticky-social { margin: 20px 0 10px 7.5px }
          	.ndnapps-sociallogin #ndn-social-login .ndn-icon:before { width: 25px }
          	.ndnapps-sociallogin #ndn-social-login .ndn-icon { margin: 0 1%; font-size: 13px; line-height: 36px; height: 36px; padding: 0 0 0 32px }
        }
    </style>
    {%- if settings.favicon != blank -%}
      <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {%- endif -%}

    {{ content_for_header }}
    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

